<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/top_caption"
            android:layout_width="match_parent"
            android:hint="Top Caption"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/bottom_caption"
            android:layout_width="match_parent"
            android:hint="Bottom Caption"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Try"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="446dp"
        android:weightSum="3">

        <Button
            android:id="@+id/load"
            android:layout_width="match_parent"
            android:text="LOAD"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:text="SAVE"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:text="SHARE"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@id/top"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgClicked"
        android:layout_width="373dp"
        android:layout_height="299dp"
        android:layout_alignBottom="@+id/select_two"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-65dp"
        android:scaleType="fitXY" />

    <TextView

        android:id="@+id/select_one"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="173dp" />

    <TextView
        android:id="@+id/select_two"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="361dp" />


</RelativeLayout>